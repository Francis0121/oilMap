<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="custom_bg_color">#282828</color>
    <color name="circle_finished_color">#01568c</color>
    <color name="circle_unfinished_color">#bfe0f5</color>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">.9</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/bs_dark_divider_color</item>
        <item name="bs_dividerColor">@android:color/transparent</item>
        <item name="bs_numColumns">3</item>
    </style>

    <style name="CustomTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/custom_bg_color</item>
    </style>

    <declare-styleable name="CircleProgress">
        <attr name="circle_progress" format="integer"/>
        <attr name="circle_max" format="integer"/>
        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>
        <attr name="circle_text_size" format="dimension"/>
        <attr name="circle_text_color" format="color"/>
        <attr name="circle_prefix_text" format="string"/>
        <attr name="circle_suffix_text" format="string"/>
    </declare-styleable>

</resources>