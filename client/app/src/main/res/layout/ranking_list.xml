<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/app_name"
            android:id="@+id/textView17"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="17dp"
            android:paddingLeft="55dp"
            android:paddingTop="17dp"
            android:background="@drawable/background_actionbar"
            android:textColor="#fff"
            />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/actionbar_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d8d8d8"
        android:id="@+id/relativeLayout01">

        <ImageView
            android:id="@+id/rank_item_imageview1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:src="@drawable/actionbar_icon"
            />

        <TextView
            android:id="@+id/myRankingLeft"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:includeFontPadding="false"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textColor="#0f1c27"/>

        <ImageView
            android:id="@+id/item_imageview2"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@drawable/effeicency"/>

        <TextView
            android:id="@+id/myRankingRight"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#0f1c27"/>


        </LinearLayout>

    <ListView
        android:id="@+id/rankingListView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="#f2f3f5"
        android:dividerHeight="1.5dp"
        android:choiceMode="singleChoice"
        android:background="@drawable/layer_list_04"
        />
</LinearLayout>