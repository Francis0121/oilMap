<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oilMap.client.info.OilInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:paddingLeft="55dp"
        android:paddingTop="17dp"
        android:background="@drawable/background_actionbar"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Recently Refueling Date"
        android:textSize="14dp"
        android:id="@+id/textView18"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="2015-05-06 5 PM"
        android:textSize="14dp"
        android:id="@+id/textView19"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginLeft="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Amount of Money"
        android:textSize="14dp"
        android:id="@+id/textView20"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/textView18" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="50,000"
        android:textSize="14dp"
        android:id="@+id/textView22"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toEndOf="@+id/textView18" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/actionbar_icon"/>

    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_marginLeft="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        custom:circle_progress="20"
        custom:circle_finished_color="@color/circle_finished_color"
        custom:circle_unfinished_color="@color/circle_unfinished_color"
        custom:circle_text_color="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/listView"
        android:layout_below="@+id/circle_progress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#9c9c9c"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Loc : 서울특별시 성북구"
        android:id="@+id/textView21"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/rankingBtn"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rankingBtn"
        android:src="@drawable/ranking"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/circle_progress"
        android:layout_alignEnd="@+id/textView22"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
