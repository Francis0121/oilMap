<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:paddingLeft="55dp"
        android:paddingTop="17dp"
        android:background="@drawable/background_actionbar"
        android:textColor="#fff"
        android:id="@+id/textView24" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/actionbar_icon"
        android:id="@+id/imageView3" />

    <fragment
        android:id="@+id/activityGpsMap"
        android:name="com.google.android.gms.maps.MapFragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true">
    </fragment>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/gpsSpeedTextView"
        android:textColor="#000"
        android:shadowColor="#0f1c27"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.5"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:id="@+id/textView25"
        android:shadowColor="#0f1c27"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.5"
        android:layout_alignBottom="@+id/gpsSpeedTextView"
        android:layout_toEndOf="@+id/gpsSpeedTextView"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/gpsImageButton"
        android:layout_alignBottom="@+id/activityGpsMap"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/ranking"/>

</RelativeLayout>
